package com.efun.mainland.util.db;

public class ReadOnlyDecision {

	private static final ThreadLocal<Boolean> holder = new ThreadLocal<Boolean>() {
		protected Boolean initialValue() {
			return false;
		};
	};

	public static final boolean get() {
		return holder.get();
	}

	public static final void remove() {
		holder.remove();
	}

	public static final void set(boolean dataBase) {
		holder.set(dataBase);
	}

}
